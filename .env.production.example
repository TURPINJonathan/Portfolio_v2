# Exemple de variables de production.
# Copie ce fichier en `.env.production` pour tester la prod en local,
# ou renseigne ces variables dans Vercel (Production).

NEXT_PUBLIC_SITE_URL=https://jonathan-turpin.fr

# Nom affiché du site
NEXT_PUBLIC_SITE_NAME=Jonathan Turpin

# Localisation
NEXT_PUBLIC_DEFAULT_LOCALE=fr-FR
NEXT_PUBLIC_DEFAULT_TIME_ZONE=Europe/Paris

NEXT_PUBLIC_GOOGLE_SITE_VERIFICATION=
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=

# Contact / réseaux (Footer)
NEXT_PUBLIC_LINKEDIN_URL=
NEXT_PUBLIC_MALT_URL=
NEXT_PUBLIC_GITHUB_URL=

# Email de contact
NEXT_PUBLIC_CONTACT_EMAIL=contact@jonathan-turpin.fr

# Téléphone de contact
NEXT_PUBLIC_CONTACT_PHONE=

# Mentions légales
NEXT_PUBLIC_LEGAL_OWNER_NAME=
NEXT_PUBLIC_LEGAL_PUBLISHER_ADDRESS=
NEXT_PUBLIC_LEGAL_PUBLISHER_SIRET=

# Hébergeur (ex: Vercel)
NEXT_PUBLIC_LEGAL_HOST_NAME=
NEXT_PUBLIC_LEGAL_HOST_ADDRESS=
NEXT_PUBLIC_LEGAL_HOST_PHONE=
NEXT_PUBLIC_LEGAL_HOST_WEBSITE=

NEXT_PUBLIC_LEGAL_JURISDICTION_CITY=

# Politique de confidentialité
NEXT_PUBLIC_PRIVACY_DATA_CONTROLLER_EMAIL=
NEXT_PUBLIC_PRIVACY_DATA_RETENTION_PERIOD=

# ------------------------------
# Formulaire de contact (SMTP)
# ------------------------------
CONTACT_SMTP_HOST=smtp.mail.ovh.net
CONTACT_SMTP_PORT=587
CONTACT_SMTP_SECURE=false
CONTACT_SMTP_USER=contact@jonathan-turpin.fr
CONTACT_SMTP_PASS=__A_METTRE_EN_SECRET__
CONTACT_SMTP_FROM=Jonathan Turpin <contact@jonathan-turpin.fr>

# (Optionnel) Nom d'affichage dans l'email (From: "Nom" <adresse>)
# Si absent, fallback sur NEXT_PUBLIC_LEGAL_OWNER_NAME puis NEXT_PUBLIC_SITE_NAME.
CONTACT_SMTP_FROM_NAME=Jonathan Turpin

# (Optionnel) Envelope-from (MAIL FROM) pour l'alignement SPF/DMARC.
# Si absent, fallback sur l'adresse extraite de CONTACT_SMTP_FROM / NEXT_PUBLIC_CONTACT_EMAIL.
CONTACT_SMTP_ENVELOPE_FROM=contact@jonathan-turpin.fr

# Destinataire des messages (ta boîte)
CONTACT_FORM_TO=contact@jonathan-turpin.fr

# ------------------------------
# Anti-spam (rate limit basique)
# ------------------------------
CONTACT_RATE_LIMIT_WINDOW_MS=600000
CONTACT_RATE_LIMIT_MAX_PER_IP=6
CONTACT_RATE_LIMIT_MAX_PER_EMAIL=3
